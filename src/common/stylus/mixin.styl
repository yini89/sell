border-1px($color)
  position: relative
  &:after
    position: absolute
    display: block
    content: ' '
    width: 100%
    border-top: 1px solid $color
    left: 0
    bottom: 0

bg-img($url)
  background-image: url("../../../static/img/" + $url + '@2x.png')
  @media (-webkit-min-device-pixel-ratio: 3), (min-device-pixel-ratio: 3)
    background-image: url("../../../static/img/" + $url + '@3x.png')
